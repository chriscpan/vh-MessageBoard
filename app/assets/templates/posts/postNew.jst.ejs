<div class='new-post-page'>
  <div class='new-post-title'>
    <h3>Submit a Posting</h3>
  </div>
  <form class='message-new-form'>
    <div class='post-new-error'></div>
    <div class='new-post-data group'>
      <div class='new-post-inputs'>
        <label for="title" class='labels'>Title</label>
        <br>
        <input type="text" id="title" name="title" placeholder="Hello!!">
        <br>
        <label for="username" class='labels'>Name</label>
        <br>
        <input type="text" id="username" name="username" placeholder="ViralHeatGuest">
      </div>
      <div class='new-post-content'>
        <label> Message </label>
        <textarea name="content" rows="8" cols="40"></textarea>
      </div>
    </div>
    <div class='message-new-submit group'>
      <input class='new-message' type="submit" value="Submit">
    </div>
  </form>
</div>
