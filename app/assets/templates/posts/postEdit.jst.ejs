<h3>Editing a Posting</h3>

<form class='message-new-form'>
  <div class='post-new-error'></div>
  <label>Title
    <input type="text" name="title" value="<%= post.get('title') %>">
  </label>
  <br>
  <label>Name
    <input type="text" name="username" value="<%= post.get('username') %>">
  </label>
  <br>
  <label>
    <textarea name="content" rows="8" cols="40"><%=post.get('content')%></textarea>
  </label>

  <input class='new-message' type="submit" value="Edit Message!">
</form>
